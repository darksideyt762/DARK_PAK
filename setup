#!/bin/bash

# Navigate to the current directory
cd "$(dirname "$0")" || { echo "Failed to navigate to script directory. Exiting..."; exit 1; }

# Download Index.txt
echo "[*] Downloading Index.txt..."
curl -L https://raw.githubusercontent.com/darksideyt762/sidedark/main/Index.txt -o Index.txt || { echo "Failed to download Index.txt. Exiting..."; exit 1; }

# Convert script to Unix format
echo "[*] Converting script to Unix format..."
dos2unix skintool || { echo "Failed to convert script. Exiting..."; exit 1; }

# Make the script executable
echo "[*] Making script executable..."
chmod +x skintool || { echo "Failed to make script executable. Exiting..."; exit 1; }

# Create symbolic link for 'skintool'
echo "[*] Creating symbolic link..."
ln -sf "$(pwd)/skintool" /data/data/com.termux/files/usr/bin/dark || { echo "Failed to create symbolic link. Exiting..."; exit 1; }

echo "[âœ”] Setup complete! You can now execute the tool by typing 'dark'."
